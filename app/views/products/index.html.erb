<!-- app/views/products/index.html.erb -->
<h1>Awesome Products</h1>
<% @products.each do |product| %>
  <div class="card-product">
    <img src="https://raw.githubusercontent.com/lewagon/fullstack-images/master/uikit/skateboard.jpg" width="100"/>
    <div class='product-body'>
      <h3><%= product.name %></h3>
      <p><%= product.tagline %></p>
    </div>
  </div>
<% end %>